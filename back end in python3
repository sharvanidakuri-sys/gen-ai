# NeuroMode â€“ Smart Mood Detection and Wellness Assistant (Non-Interactive Version)
# Works in restricted or non-interactive environments

import random

# --- Keyword lists for basic mood detection ---
positive_words = [
    "happy", "joy", "great", "awesome", "love", "excited", "good",
    "fantastic", "amazing", "wonderful", "glad", "positive"
]
negative_words = [
    "sad", "tired", "angry", "bad", "upset", "depressed", "anxious",
    "stressed", "terrible", "hate", "worried", "negative"
]

# --- Suggestions & Tips ---
suggestions = {
    "positive": [
        "Keep up the great energy! ğŸŒ",
        "Share your happiness with a friend ğŸ’¬",
        "Do something creative today ğŸ¨",
        "Keep smiling â€” it suits you ğŸ˜„"
    ],
    "neutral": [
        "Take a peaceful walk ğŸï¸",
        "Listen to your favorite music ğŸ¶",
        "Try a short meditation ğŸ§˜â€â™€ï¸",
        "Reflect on something positive ğŸŒ¸"
    ],
    "negative": [
        "Take a deep breath â€” it's okay ğŸ’–",
        "Call a loved one â¤ï¸",
        "Watch something funny ğŸ˜‚",
        "Eat your favorite comfort food ğŸ²",
        "Try a 5-minute breathing exercise ğŸ«"
    ]
}

wellness_tips = [
    "Practice gratitude â€“ list 3 things you're thankful for ğŸ™",
    "Move your body â€“ a short walk reduces stress ğŸƒâ€â™‚ï¸",
    "Limit screens â€“ take a break from your phone ğŸ“µ",
    "Connect with someone you trust ğŸ’¬",
    "Drink water and stay hydrated ğŸ’§"
]

# --- Mood detection function ---
def simple_sentiment(text):
    text_lower = text.lower()
    pos = sum(word in text_lower for word in positive_words)
    neg = sum(word in text_lower for word in negative_words)

    if pos > neg:
        return "positive"
    elif neg > pos:
        return "negative"
    else:
        return "neutral"

# --- Analyze and print result ---
def analyze_mood(text):
    mood = simple_sentiment(text)
    suggestion = random.choice(suggestions[mood])
    tip = random.choice(wellness_tips)

    print("ğŸ§  Text:", text)
    print("â¡ï¸ Detected Mood:", mood.capitalize())
    print("ğŸ’¡ Suggestion:", suggestion)
    print("ğŸŒ¿ Wellness Tip:", tip)
    print("-------------------------------------------\n")

# --- Main program (auto-runs with examples) ---
def main():
    print("==========================================")
    print("ğŸ§  NeuroMode â€“ Smart Mood Detection (Offline)")
    print("==========================================\n")

    # Sample inputs (you can change or extend this list)
    sample_inputs = [
        "I am feeling very happy and excited today!",
        "I feel tired and stressed from work.",
        "Nothing special, just an average day.",
        "I'm anxious about my exams.",
        "Life is wonderful and I love my friends."
    ]

    for sentence in sample_inputs:
        analyze_mood(sentence)

if __name__ == "__main__":
    main()

